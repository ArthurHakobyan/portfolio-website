---
import heroBg from '../../src/assets/hero-one.jpg'
---

<section>
    <div 
    class="hero"
    style={`background-image: url(${heroBg.src})`}
     >
        <h1 class="hero-heading">
            I Create Custom Websites
            <div class="word-wrapper">
                <span class="word">For Business</span>
            </div>
        </h1>
            <div class="hero-btn">
                <button class="cta-btn">I WANT WEBSITE</button>
            </div>
    </div>
</section>

<style>
    .hero {
        height: 100vh;
        background-color: var(--color-bg-info);
        background-size: cover;
        background-position: center;
    }

    .hero-heading {
        padding-top: 30vh;
        padding-left: 10%;
        color: white;
        font-size: 4rem;
        font-weight: 500;
        letter-spacing: 0.05em;
        width: 70%;
    }

    .word-wrapper {
        position: relative;
    }

    .word {
        color: black;
        background-color: white;
        border-radius: 6.25rem;
        padding: 0.5rem 1rem;
        margin-bottom: 1rem;
    }

    .hero-btn {
        margin-top: 7rem;
        margin-left: 10%;
    }

    .cta-btn {
        padding: 1rem 2rem;
        font-size: var(--font-size-2xl);
        border-radius: 0;
        border: none;
        background-color: var(--color-primary);
        color: white;
    }


    /* Responsive visibility */
        @media (max-width: 768px) {
        .hidden-mobile {
            display: none;
        }

       
  
        .hero-heading {
            font-size: var(--font-size-4xl);
            padding-top: 20vh;
            width: 100%;
            letter-spacing: 0.05em;
        }

        .word-wrapper {
            margin-top: 1rem;
        }


    .cta-btn {
        padding: 1rem 1.5rem;
        font-size: var(--font-size-lg);
    }

    }

        @media (min-width: 769px) and (max-width: 900px) {
        .hidden-desktop {
            display: none;
        }

        .hero-heading {
            font-size: 3rem;
            width: 60%;
            letter-spacing: 0.05em;
        }

    }


</style>

<script>
   import { gsap } from "gsap"

   const words = ["For Startups", "For Companies", "SEO-Focused", "That Perform", "For Business"];
   let index = 0;

  window.addEventListener("DOMContentLoaded", () => {
        const wrapper = document.querySelector(".word-wrapper")!;
        const currentWord = document.querySelector(".word")!;
   

    if (!wrapper || !currentWord) return;

    function changeWord() {
      const nextIndex = (index + 1) % words.length;

      currentWord.textContent = words[nextIndex];

      // Start ABOVE
      gsap.set(currentWord, {
        y: "-40%",
        opacity: 0,
        position: "absolute",
        left: 0,
        top: 0
      });

      wrapper.appendChild(currentWord);


      const tl = gsap.timeline({
        defaults: { duration: 0.7, ease: "power3.inOut" }
      });

      tl.to(currentWord, {
        y: "120%",
        opacity: 0
      })
      .to(currentWord, {
        y: "0%",
        opacity: 1
      }, "<")
      .call(() => {
        index = nextIndex;
      });
    }

    setInterval(changeWord, 2200);
  });
</script>